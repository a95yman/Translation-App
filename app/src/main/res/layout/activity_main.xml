<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8BC34A"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/mainmenu"
        android:visibility="gone"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="60dp"
            android:id="@+id/hidemen"
            android:layout_height="70dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_close_24"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/circle">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/logo" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="iTranslate Pro"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:text="Menu"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/menuhome"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_baseline_home_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:text="Home"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/managads"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_baseline_ads_click_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:text="Manage Ads"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/rateapp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_baseline_star_rate_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rate App"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/shareapp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_baseline_screen_share_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:text="Share App"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/copyrights"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_baseline_copyright_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:text="Copyrights"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/instructions"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_baseline_info_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:text="Instructions"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:paddingBottom="140dp"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/shape2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape5"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/choosesource"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Auto"
                        android:textColor="#404040"
                        android:textSize="18dp" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/swipelangs"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_compare_arrows_24"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/choosetarget"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Arabic"
                        android:id="@+id/txt2"
                        android:textColor="#404040"
                        android:textSize="18dp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="70dp"
                android:id="@+id/holder"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/mic"
                    android:gravity="center_horizontal|bottom"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_baseline_mic_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#606060"
                        android:textSize="15dp"
                        android:layout_centerInParent="true"
                        android:text="Mic"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/gallery"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|bottom"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_baseline_image_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#606060"
                        android:textSize="15dp"
                        android:layout_centerInParent="true"
                        android:text="Gallery"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/camera"
                    android:gravity="center_horizontal|bottom"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_baseline_camera_alt_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#606060"
                        android:textSize="15dp"
                        android:layout_centerInParent="true"
                        android:text="Camera"/>
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:background="#F5F5F5"
                android:scrollbars="none"
                android:paddingTop="10dp"
                android:id="@+id/scroll1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="100dp"
                    android:orientation="vertical"
                    android:id="@+id/parr">

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bannerholder"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="140dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape4">

                <EditText
                    android:id="@+id/maintext"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:clickable="false"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="60dp"
                    android:backgroundTint="#eee"
                    android:hint="Write something..."
                    android:inputType="text"
                    android:textColor="#303030"
                    android:textColorHint="#606060"
                    android:textSize="17dp" />
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/translate"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/shape3">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_baseline_send_24" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:id="@+id/page2"
            android:visibility="invisible"
            android:paddingBottom="100dp"
            android:paddingTop="20dp"
            android:background="@drawable/shape2">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#303030"
                   android:textSize="18dp"
                   android:layout_marginLeft="20dp"
                   android:text="Saved texts"/>

               <ScrollView
                   android:layout_marginTop="20dp"
                   android:layout_width="match_parent"
                   android:background="#F5F5F5"
                   android:paddingTop="10dp"
                   android:id="@+id/scroll2"
                   android:paddingLeft="10dp"
                   android:scrollbars="none"
                   android:paddingRight="10dp"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingBottom="100dp"
                       android:orientation="vertical"
                       android:id="@+id/parr2">

                   </LinearLayout>
               </ScrollView>
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bannerholder2"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp">

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/shape1"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/nav"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_baseline_text_snippet_24" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_baseline_home_24_black" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_baseline_settings_24"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape1"
            android:id="@+id/chooselangs"
            android:alpha="1"
            android:visibility="gone"
            android:paddingTop="20dp"
            android:layout_marginTop="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/addlangs"
                android:paddingBottom="50dp"
                android:gravity="center_horizontal">
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_gravity="right"
                    android:id="@+id/goback1"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_baseline_close_24"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:textColor="#fff"
                    android:id="@+id/txt1"
                    android:text="Choose"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/circle_none">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="15dp"
                        android:id="@+id/searchlangs"
                        android:inputType="text"
                        android:layout_centerInParent="true"
                        android:backgroundTint="#fff"
                        android:textColor="#fff"
                        android:textColorHint="#eee"
                        android:hint="Search..."/>
                </RelativeLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/addlangschild"
                        android:orientation="vertical"
                        android:gravity="center">

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/splashscreen"
            android:visibility="visible"
            android:background="#fff">
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:id="@+id/slowcon"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:textColor="#303030"
                android:textSize="20dp"
                android:text="Slow connection"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>